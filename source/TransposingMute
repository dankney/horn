difference(){
        cylinder($fn=360, h=39, r1=30.75, r2= 34.25, center=false);
        cylinder($fn=360, h=39, r1=26.25, r2=33.25, center=false);
}

//Top
translate([0,0,39]) {
    difference(){
        cylinder($fn=36, h=83, r1=34.25, r2=4, center=false);
        cylinder($fn=360, h=83, r1=33.25, r2=3, center=false);
    }
}

//Pipe
